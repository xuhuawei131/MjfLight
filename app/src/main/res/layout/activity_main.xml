<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <RelativeLayout
            android:id="@+id/layout_background"
            android:soundEffectsEnabled="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/background1">

            <ImageView
                android:id="@+id/image_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:src="@mipmap/mainbutton_off1" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_light"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="8dp"
                android:text="9:00"
                android:textColor="@color/green"
                android:textSize="75sp" />

            <SlidingDrawer
                android:id="@+id/slidingdrawer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/image_light"
                android:content="@+id/content"
                android:handle="@+id/handle"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/drawer_top"></ImageView>

                <LinearLayout
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@mipmap/drawer_bottom"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/tel_husband"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/btn_bg_red"
                        android:text="@string/tel_husband"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />

                    <!--<Button-->
                        <!--android:id="@+id/sms_husband"-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_margin="15dp"-->
                        <!--android:background="@drawable/btn_bg_red"-->
                        <!--android:text="@string/sms_husband"-->
                        <!--android:textColor="@android:color/white"-->
                        <!--android:textSize="17sp" />-->

                    <Button
                        android:id="@+id/sms_husband_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/btn_bg_red"
                        android:text="@string/sms_husband_location"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />
                    <Button
                        android:id="@+id/update_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/btn_bg_red"
                        android:text="@string/update_num"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />
                    <Button
                        android:id="@+id/set_more"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/btn_bg_red"
                        android:text="@string/set_moe"
                        android:textColor="@android:color/white"
                        android:textSize="17sp" />
                </LinearLayout>
            </SlidingDrawer>
        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

</android.support.design.widget.CoordinatorLayout>





